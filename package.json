{
  "name": "tokyo-lore",
  "version": "1.0.0",
  "description": "Tokyo Lore - A full-stack storytelling platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "health-check": "node deploy/health-check.js",
    "health-check:continuous": "node deploy/health-check.js --continuous",
    "rollback": "chmod +x deploy/rollback.sh && ./deploy/rollback.sh",
    "deploy:check": "npm run health-check && echo 'âœ… Pre-deployment checks passed'"
  },
  "keywords": [
    "react",
    "node",
    "mongodb",
    "stripe",
    "cloudinary"
  ],
  "author": "Tokyo Lore Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "stripe": "^13.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
